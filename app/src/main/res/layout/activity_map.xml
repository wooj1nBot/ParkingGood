<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:gravity="bottom"
    android:background="#00FFFFFF"
    app:umanoDragView="@id/drawer"
    app:umanoPanelHeight="50dp"
    app:umanoOverlay="true"
    app:umanoShadowHeight="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_mycar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#ffffff"
            android:clickable="true"
            android:tint="@color/main"
            app:borderWidth="0dp"
            app:maxImageSize="26dp"
            app:srcCompat="@drawable/minor_crash_48px"
            app:tint="@color/main" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/main"
            android:clickable="true"
            android:tint="@color/white"
            app:borderWidth="0dp"
            app:maxImageSize="26dp"
            app:srcCompat="@drawable/my_location_48px"
            app:tint="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:visibility="visible"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="false"
                        android:padding="10dp"
                        android:tint="@color/main"
                        app:srcCompat="@drawable/map_48px" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/iv_search"
                        android:fontFamily="@font/scdream5"
                        android:text="장소 검색"
                        android:textColor="#585858"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="12dp"
                    app:srcCompat="@drawable/close_48px" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="12dp"
                    app:srcCompat="@drawable/arrow_back_48px" />

                <EditText
                    android:id="@+id/ed_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toStartOf="@id/delete"
                    android:layout_toEndOf="@id/back"
                    android:background="@drawable/stroke_login"
                    android:ems="10"
                    android:hint="검색할 장소를 입력해주세요."
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:textSize="17sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.adventure.savel.FindActivity" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/tv_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:textColor="#222222"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>